<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Url Shortner</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Nimmy-Url Shortner App</h1>
            </div>
        </div>
        <br>
        <form action="/create" method="POST">
            <div class="row">
                <div class="col-lg-12">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Place the Long URL"
                            aria-label="Place the Long URL" aria-describedby="button-addon2" name="longUrl" />
                        <div class="input-group-append">
                            <input type="submit" value="Submit" class="btn btn-outline-info">
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <br>
        <div class="row">
            <% for(var i=0;i< allUrlData.length;i++){ %>
            <div class="col-lg-3">
                <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
                    <div class="card-header">Total Clicks <%= allUrlData[i].clickCount %></div>
                    <div class="card-body">
                        <h6 class="card-title">
                            <a href="http://localhost:3000/<%= allUrlData[i].shortUrl %>"
                                target="_blank">http://localhost:3000/<%= allUrlData[i].shortUrl %></a>
                        </h6>
                        <p class="card-text"> <%= allUrlData[i].longUrl %> </p>
                        <a href="/delete/<%= allUrlData[i].id %>" class="btn btn-xs btn-light">Remove</a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</body>

</html>